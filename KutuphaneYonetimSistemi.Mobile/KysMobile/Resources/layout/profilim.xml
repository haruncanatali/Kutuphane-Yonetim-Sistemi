<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:orientation="vertical"
        android:gravity="center">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Profilim"
          android:textSize="20dp"/>
      <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/rounded_frame"
            android:id="@+id/profilFotoImg"/>
    </LinearLayout>
    <!-- düzen başlangıçı -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Ad"/>
            <EditText
                android:layout_width="130dp"
                android:layout_marginTop="-10dp"
                android:layout_height="wrap_content"
                android:id="@+id/adTxt"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Soyad"/>
            <EditText
                android:layout_width="130dp"
                android:layout_marginTop="-10dp"
                android:layout_height="wrap_content"
                android:id="@+id/soyadTxt"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Kullanıcı Adı"/>
            <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:id="@+id/kullaniciAdiTxt"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Şifre"/>
            <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:password="true"
                android:layout_marginTop="-10dp"
                android:id="@+id/sifreTxt"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Mail"/>
            <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:id="@+id/mailTxt"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Fotoğraf"/>
            <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:id="@+id/fotoTxt"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Telefon"/>
            <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:id="@+id/telefonTxt"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Adres"/>
            <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:id="@+id/adresTxt"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Okul"/>
            <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:id="@+id/okulTxt"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Tc Kimlik No"/>
            <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:id="@+id/tcknTxt"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Güncelle"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="#686de0"
            android:id="@+id/guncelleBtn"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Anasayfa"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="#ff7979"
            android:layout_marginLeft="10dp"
            android:id="@+id/anasayfaBtn"/>

    </LinearLayout>



</LinearLayout>
