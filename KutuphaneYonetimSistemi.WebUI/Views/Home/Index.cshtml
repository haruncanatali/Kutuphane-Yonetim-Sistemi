@using System.Web.UI.WebControls
@using KutuphaneYonetimSistemi.Entities.Concrete
@{
    ViewBag.Title = "Home Page";

    List<Duyuru> duyurular = ViewBag.duyurular as List<Duyuru>;
}

<h2 class="h2 text-center mt-3">Anasayfa</h2>
<hr />
<div class="row mt-2">
    <div class="col-md-4">
        <div class="card" style="width: 18rem; height: 100px; background-color: #22a6b3;">
            <p style="color: aliceblue; font-size: 25px; margin-left: 10px;">Kitap Sayısı</p>
            <p style="color: aliceblue; font-size: 25px; margin-left: 10px;">@ViewBag.kitapSayisi</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card" style="width: 18rem; height: 100px; background-color: #6ab04c;">
            <p style="color: aliceblue; font-size: 25px; margin-left: 10px;">Personel Sayısı</p>
            <p style="color: aliceblue; font-size: 25px; margin-left: 10px;">@ViewBag.personelSayisi</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card" style="width: 18rem; height: 100px; background-color: #eb4d4b;">
            <p style="color: aliceblue; font-size: 25px; margin-left: 10px;">Hareket Sayısı</p>
            <p style="color: aliceblue; font-size: 25px; margin-left: 10px;">@ViewBag.hareketSayisi</p>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col-md-4">
        <div class="card" style="width: 18rem; height: 100px; background-color: #5f27cd; ">
            <p style="color: aliceblue; font-size: 25px; margin-left: 10px;">Üye Sayısı</p>
            <p style="color: aliceblue; font-size: 25px; margin-left: 10px;">@ViewBag.uyeSayisi</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card" style="width: 18rem; height: 100px; background-color: #ff9f43;">
            <p style="color: aliceblue; font-size: 25px; margin-left: 10px;">Kasa Tutarı</p>
            <p style="color: aliceblue; font-size: 25px; margin-left: 10px;">@ViewBag.kasaTutari&nbsp;&#x20BA;</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card" style="width: 18rem; height: 100px; background-color: #1dd1a1;">
            <p style="color: aliceblue; font-size: 25px; margin-left: 10px;">Ceza Sayısı</p>
            <p style="color: aliceblue; font-size: 25px; margin-left: 10px;">@ViewBag.cezaSayisi</p>
        </div>
    </div>
</div>
<hr />
<div class="row mt-2">
    <div class="col-md-6 mt">
        <h3 class="h3 text-center">Duyurular</h3><hr/>
        <div class="row">
            <div class="col-md-12" style="max-height: 150px; overflow-y: auto;">
                <ul class="list-group">
                    @foreach (var item in duyurular)
                    {
                        <li class="list-group-item">
                            <p style="float: left;">@item.Aciklama&nbsp;</p>
                            <p style="float: left;">@item.Tarih.ToString("MM/dd/yyyy")</p>
                            <a href="/Home/DuyuruSil/@item.Id" class="text-danger ml-5">Sil</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <hr />
    </div>
    <div class="col-md-6 mt">
        <h3 class="h3 text-center">Duyuru Ekle</h3>
        <hr />
        @using (Html.BeginForm("DuyuruEkle", "Home", FormMethod.Get))
        {
            <textarea id="duyuruVal" name="duyuruVal" rows="5" cols="60" placeholder="Duyuru açıklamasını giriniz"></textarea>
            <div class="row d-flex justify-content-center">
                <button class="btn btn-primary" type="submit" style="width: 100px;">Ekle</button>
            </div>
        }
    </div>
</div>