<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kütüphane Yönetim Sistemi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css">
</head>
<body>
<div class="row">
        <div class="col-md-3 vh-100">
            <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark h-100">
                <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                    <img height="40" width="32" src="https://cdn-icons-png.flaticon.com/512/225/225932.png" />
                    <span class="fs-4" style="margin-left: 10px; font-weight: bold;">Kütüphane Yönetim Sistemi</span>
                </a>
                <hr>
                <ul class="nav nav-pills flex-column mb-auto" id="solMenu">
                    <li>
                        <a href="/Home/Index" class="nav-link text-white">
                            <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"></use></svg>
                            <i class="fas fa-home" style="margin-right: 5px;"></i>Anasayfa
                        </a>
                    </li>
                    <li>
                        <a href="/Kategori/Index" class="nav-link text-white">
                            <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
                            <i class="fas fa-bars" style="margin-right: 5px;"></i>Kategoriler
                        </a>
                    </li>
                    <li>
                        <a href="/Kitap/Index" class="nav-link text-white">
                            <svg class="bi me-2" width="16" height="16"><use xlink:href="#table"></use></svg>
                            <i class="fas fa-book" style="margin-right: 5px;"></i>Kitaplar
                        </a>
                    </li>
                    <li>
                        <a href="/KitapHareketleri/Index" class="nav-link text-white">
                            <svg class="bi me-2" width="16" height="16"><use xlink:href="#table"></use></svg>
                            <i class="fas fa-receipt" style="margin-right: 5px;"></i>Kitap Hareketleri
                        </a>
                    </li>
                    <li>
                        <a href="/Yazar/Index" class="nav-link text-white">
                            <svg class="bi me-2" width="16" height="16"><use xlink:href="#grid"></use></svg>
                            <i class="fas fa-user-edit" style="margin-right: 5px;"></i>Yazarlar
                        </a>
                    </li>
                    <li>
                        <a href="/Uye/Index" class="nav-link text-white">
                            <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle"></use></svg>
                            <i class="fas fa-users" style="margin-right: 5px;"></i>Üyeler
                        </a>
                    </li>
                    <li>
                        <a href="/Personel/Index" class="nav-link text-white">
                            <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle"></use></svg>
                            <i class="fas fa-user-cog" style="margin-right: 5px;"></i>Personeller
                        </a>
                    </li>
                    <li>
                        <a href="/Ceza/Index" class="nav-link text-white">
                            <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle"></use></svg>
                            <i class="fas fa-money-bill-wave-alt" style="margin-right: 5px;"></i>Cezalar
                        </a>
                    </li>
                </ul>
                <hr>
                <div class="dropdown">
                    <a style="margin-left: 20px;" href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
                        <strong>Haruncan Atalı</strong>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                        <li><a class="dropdown-item" href="/Account/Logout">Çıkış Yap</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-9">@RenderBody()</div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
