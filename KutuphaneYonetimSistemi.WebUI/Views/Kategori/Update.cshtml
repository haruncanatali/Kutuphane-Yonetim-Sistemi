@using KutuphaneYonetimSistemi.Entities.Concrete
@model Kategori
@{
    ViewBag.Title = "Update";
}

<h2 class="h2 text-center">Kategori Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("Update", "Kategori", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <br />
    <label><span class="h4">Kategori Adı</span></label>
    @Html.HiddenFor(c=>c.Id)
    @Html.TextBoxFor(c => c.Ad, new { @class = "form-control mt-3", @style = "width:300px;" });
    @Html.ValidationMessageFor(c => c.Ad, null, new { @class = "text-danger" })
    <br />
    <button type="submit" class="btn btn-primary mt-2">Güncelle</button>
}

